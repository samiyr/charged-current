{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/opt/homebrew/Cellar/llvm/16.0.1/bin/clang++",
            "args": [
				"--std",
				"c++20",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
				"-I/opt/homebrew/include",
				"-I/opt/homebrew/opt/llvm/include",
                "-L/opt/homebrew/lib",
				"-L/opt/homebrew/opt/llvm/lib",
                "-lgsl",
                "-lgslcblas",
				"`lhapdf-config --cflags --ldflags`"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
		{
            "type": "cppbuild",
            "label": "buildCrossSection",
            "command": "/opt/homebrew/Cellar/llvm/16.0.1/bin/clang++",
            "args": [
				"--std",
				"c++20",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${cwd}/CrossSection.cpp",
                "-o",
                "${fileDirname}/CrossSection",
				"-I/opt/homebrew/include",
				"-I/opt/homebrew/opt/llvm/include",
                "-L/opt/homebrew/lib",
				"-L/opt/homebrew/opt/llvm/lib",
                "-lgsl",
                "-lgslcblas",
				"`lhapdf-config --cflags --ldflags`",
				"-fopenmp",
				"-lomp",
				"-O3",
				"-ffast-math"
            ],
            "options": {
                "cwd": "${fileDirname}/.."
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
		{
            "type": "cppbuild",
            "label": "buildTests",
            "command": "/usr/bin/clang++",
            "args": [
				"--std",
				"c++20",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${cwd}/Tests.cpp",
                "-o",
                "${fileDirname}/Tests",
				"-I/opt/homebrew/include",
                "-L/opt/homebrew/lib",
                "-lgsl",
                "-lgslcblas",
				"`lhapdf-config --cflags --ldflags`"
            ],
            "options": {
                "cwd": "${fileDirname}/.."
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}